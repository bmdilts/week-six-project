<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/../public/main.css">
    <title>Gabble</title>
  </head>
  <body>
    <header>
      <a href="http://localhost:3000/">Gabble</a>
      <a href="http://localhost:3000/new">Create a new gab</a>
      <a href="http://localhost:3000/login">Logged in as {{displayName}}</a>
      <a href="http://localhost:3000/logout">Log out</a>
    </header>
    <main>
      <div class="gabs">
        {{#gabs}}
        <div>
          <p><b>{{name}}:</b> {{gab}}</p>
          <p>{{date}}</p>
          <p>{{likes}} likes</p>
        </div>
        <form action="/like/{{id}}" method="post">
          <button class="button" type="submit" value="like">Like</button>
        </form>
        {{#destroy}}
        <form action="/delete/{{id}}" method="post">
          <button class = "button" type="submit" value="delete">Delete</button>
        </form>
        {{/destroy}}
        {{/gabs}}
      </div>
    </main>
  </body>
</html>
